<div class="user-container">
<div class="user-data"> 
  <h2>#<%= @post.title %> by <span><%= @post.author.name %></span></h2>
  <h3 class = "post-comment">Comment <%= @post.author.comment_ids.count%>,  <span>Likes <%= @post.likes_counter%></span></h3>
  <p><%= @post.text %></p>
</div>

<%= form_with url: "/posts/#{@post.id}/likes", scope: :like do |form| %>
    <%= form.submit "Like ", class: "post-like-btns"%>
  <% end %>

</div>
<div>
<div class="comments">
<% @comments.each do |comment| %>
   <h2><%= comment.author.name%>: <%= comment.text%></h2>
<%end%>
</div>
<div>
    <%= render partial: "create_comments", local: { post: @post } %>
  </div>
</div>